@using System.Web.UI.WebControls;
@{
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
}
@{
    var grid = Html.DevExpress().GridView(settings =>
    {
        settings.Name = "GridViewPartial_CompraProductoDetalle";
        settings.KeyFieldName = "Secuencia";
        settings.Width = Unit.Percentage(100);
        settings.CallbackRouteValues = new { Controller = "Compra", Action = "GridViewPartial_CompraProductoDetalle" };
        settings.SettingsEditing.BatchUpdateRouteValues = new { Controller = "Compra", Action = "BatchEditingUpdateModel" };

        settings.SettingsEditing.Mode = GridViewEditingMode.Batch;
        settings.SettingsEditing.BatchEditSettings.EditMode = GridViewBatchEditMode.Row;
        settings.SettingsEditing.NewItemRowPosition = GridViewNewItemRowPosition.Bottom;
        //settings.ClientSideEvents.BatchEditStartEditing = "TextInfoGrid_StartBatchEditing";
        //settings.ClientSideEvents.BatchEditEndEditing = "TextInfoGrid_EndBatchEditing";
        //settings.ClientSideEvents.Init = "TextInfoGrid_OnInit";

        //settings.SettingsPager.Mode = BatchEditingOptions.PagerMode;
        //settings.SettingsEditing.BatchEditSettings.EditMode = BatchEditingOptions.EditMode;
        //settings.SettingsEditing.BatchEditSettings.HighlightDeletedRows = BatchEditingOptions.HighlightDeletedRows;
        settings.SettingsEditing.BatchEditSettings.KeepChangesOnCallbacks = DefaultBoolean.False;
        //settings.Settings.VerticalScrollableHeight = 594;

        settings.CommandColumn.Visible = true;
        settings.CommandColumn.ShowCancelButton = true;
        settings.CommandColumn.ShowDeleteButton = false;
        settings.CommandColumn.ShowNewButtonInHeader = false;
        settings.CommandColumn.ShowCancelButton = true;
        //settings.CommandColumn.Width = Unit.Pixel(150);

        settings.Columns.Add(column =>
        {
            column.FieldName = "Descripcion";
            column.Caption = "Característica";
            column.Width = Unit.Percentage(80);
            column.EditFormSettings.Visible = DefaultBoolean.False;
        });
        settings.Columns.Add(column =>
        {
            column.FieldName = "Valor";
            column.Caption = "Valor";
            column.PropertiesEdit.DisplayFormatString = "{0:n2}";
            column.EditorProperties().SpinEdit(q =>
            {
                q.AllowMouseWheel = false;
                q.MinValue = 0;
                q.DisplayFormatString = "{0:n2}";
                q.Width = Unit.Percentage(100);
            });
            column.Width = Unit.Percentage(10);
            column.EditFormSettings.Visible = DefaultBoolean.True;
        });
        //settings.ClientSideEvents.BeginCallback = "OnBeginGridCallback";

        //DevExpress.Web.Demos.GridViewFeaturesHelper.SetupGlobalGridViewBehavior(settings);

        settings.ClientSideEvents.BeginCallback = "function(s,e) { e.customArgs['TransaccionFixed'] = $('#IdTransaccionSession').val(); OnBeginGridCallback(s,e);}";
        settings.ClientSideEvents.Init = "function(s,e) { GridViewPartial_CompraProductoDetalle.PerformCallback(); }";
    });
}
@grid.Bind(Model).GetHtml()